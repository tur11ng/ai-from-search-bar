{
  "manifest_version": 3,
  "name": "AI from",
  "version": "0.1",
  "description": "Talk to AI (ChatGPT/Gemini/Mistral) directly from the search bar (omnibox).",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://chat.mistral.ai/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "host_permissions": [],
  "omnibox": {
    "keyword": "c"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}